<h3>Studies:</h3>
<% if @studies.empty? %>
<p>No Studies</p>
<% else %>
<ul class="study-menu">
  <li <%= 'class="selected_study"' if @study_id == 0 %>><%= link_to_remote "All Studies", { :method => :get, :url => dashboard_path(:date => @date, :study_id => 0) }, { :href => dashboard_path(:date => @date, :study_id => 0) } %></li>
  <% @studies.each do |s| %>
  <li <%= 'class="selected_study"' if @study_id == s.id %>><%= link_to_remote s.name, { :method => :get, :url => dashboard_path(:date => @date, :study_id => s.id) }, { :href => dashboard_path(:date => @date, :study_id => s.id) } %></li>
  <% end %>
</ul>
<% end %>

