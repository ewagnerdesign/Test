<td colspan="6">
  <div class="block-container" style="border-color:LimeGreen;">
    <div class="title">Edit <%= h(@monitor_view.name) %> </div>
    <%= link_to_close(edit_monitor_view_path(@monitor_view)) %>
    <div id="<%= dom_id(@monitor_view) %>" class="input-form crud-form">
    <% remote_form_for [@monitor_view] do |f| %>
      <%= render :partial => "form", :locals => {:f => f, :limited_edit => true} %>
      <p>
        <%= f.submit "Update" %> or <%= link_to_cancel "cancel", edit_monitor_view_path(@monitor_view) %>
      </p>
    <% end %>
    </div>
  </div>
</td>
