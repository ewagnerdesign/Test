<div class="block-container" style="border-color:LimeGreen;">
  <div class="title">Edit <%= h(@sdtm_answer.nci_preferred_term) %> </div>
  <%= link_to_close(edit_admin_sdtm_category_sdtm_answer_path(@sdtm_category, @sdtm_answer)) %>
  <div id="<%= dom_id(@sdtm_answer) %>" class="input-form crud-form">
  <% remote_form_for [:admin, @sdtm_category, @sdtm_answer], :url => admin_sdtm_category_sdtm_answer_path(@sdtm_category, @sdtm_answer) do |f| %>
    <%= render :partial => "admin/sdtm_answers/form", :locals => {:f => f} %>
    <p>
      <%= f.submit "Update" %> or <%= link_to_cancel "cancel", edit_admin_sdtm_category_sdtm_answer_path(@sdtm_category, @sdtm_answer) %>
    </p>
  <% end %>
  </div>
</div>
