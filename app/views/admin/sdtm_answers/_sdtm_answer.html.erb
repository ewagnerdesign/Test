<li id="<%= dom_id(sdtm_answer) %>"
  <%= highlightable(dom_id(sdtm_answer, :tools), true) %>
  <%= clickable admin_sdtm_category_sdtm_answer_path(@sdtm_category, sdtm_answer) %>   >
  <div class="strip <%= sdtm_answer.read_only ? 'read_only_sdtm' : 'editable_sdtm' %>">
    <%= sdtm_answer.read_only ? 'Read-Only' : 'Editable' %>
  </div>
  <div class="tools" id="<%= dom_id(sdtm_answer, :tools) %>" style="display:none;">
    <%= link_to_remote 'Show', {:method => :get, :url => admin_sdtm_category_sdtm_answer_path(@sdtm_category, sdtm_answer)}, {:onclick => "event.cancelBubble=true;"} %> 
    <% if !sdtm_answer.read_only %> |
      <%= link_to_remote 'Edit',
        {:method => :get, :url => edit_admin_sdtm_category_sdtm_answer_path(@sdtm_category, sdtm_answer), :condition => "close_previous_crud_form()"},
        {:onclick => "event.cancelBubble=true;" } %> |
      <%= link_to_remote_if sdtm_answer.removable?, 'Delete',
        {:method=> :delete, :url => admin_sdtm_category_sdtm_answer_path(@sdtm_category, sdtm_answer),
         :confirm => 'Are you sure you want to delete the "' + sdtm_answer.nci_preferred_term + '"?'},
         {:onclick => "event.cancelBubble=true;"} %>
    <%  end   %>
  </div>
  <div class="indent">
    <%= highlight_search_result(sdtm_answer.code, @current_query) %><br/>
    <%= highlight_search_result(sdtm_answer.nci_preferred_term, @current_query) %>
  </div>
</li>
