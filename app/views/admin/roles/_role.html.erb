<tr id="<%= dom_id_nested(:item, role) %>" class="underlined_row">
  <td><%= role.name %></td>
  <td><%= category_name(role.category) %></td>
  <td><%= role.users.count.to_s %></td>
  <td>
      <%= link_to_remote 'Edit',
      {:method => :get, :url => edit_admin_role_path(role), :condition => "close_previous_crud_form()"},
      {:onclick => "event.cancelBubble=true;" } %> | 
      <%= link_to_remote_if role.removable?, 'Delete',
      {:method=> :delete, :url => admin_role_path(role),
       :confirm => "Are you sure you want to delete the role '#{role.name}'?"},
       {:onclick => "event.cancelBubble=true;", :id => dom_id(role, :delete)} %></td>
</tr>

