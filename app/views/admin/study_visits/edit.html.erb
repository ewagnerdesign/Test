<td colspan="7">
  <div class="block-container" style="border-color:LimeGreen;">
    <div class="title">Edit Visit - <%= h(@visit.name) %> </div>
    <%= link_to_close(edit_admin_study_visit_path(@study, @visit)) %>
    <div id="<%= dom_id(@visit) %>" class="input-form crud-form">
    <% remote_form_for [:admin, @study, @visit], :url => admin_study_visit_path(@study, @visit, :selected_study_arm_id => @selected_study_arm) do |f| %>
      <%= render :partial => "admin/study_visits/form", :locals => {:f => f} %>
      <p>
        <%= f.submit "Update" %> or <%= link_to_cancel "cancel", edit_admin_study_visit_path(@study, @visit) %>
      </p>
    <% end %>
    </div>
  </div>
</td>