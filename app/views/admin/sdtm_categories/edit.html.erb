<div class="block-container" style="border-color:LimeGreen;">
  <div class="title">Edit <%= h(@sdtm_category.name) %> </div>
  <%= link_to_close(edit_admin_sdtm_category_path(@sdtm_category)) %>
  <div id="<%= dom_id(@sdtm_category) %>" class="input-form crud-form">
  <% remote_form_for [:admin, @sdtm_category] do |f| %>
    <%= render :partial => "form", :locals => {:f => f} %>
    <p>
      <%= f.submit "Update" %> or <%= link_to_cancel "cancel", edit_admin_sdtm_category_path(@sdtm_category) %>
    </p>
  <% end %>
  </div>
</div>
