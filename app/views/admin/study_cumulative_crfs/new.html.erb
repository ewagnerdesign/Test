<div class="block-container" style="border-color:LimeGreen;">
  <div class="title">Add Cumulative CRFs</div>
  <%= link_to_close(new_admin_study_form_path(@study)) %>
  <div id="<%= dom_id_nested(:item, @study) %>" class="input-form crud-form">
    <% remote_form_for [:admin, @study], :url => admin_study_crfs_path(@study), :html => { :method => :post } do |f| %>
      <div id="<%= dom_id_nested(:available_forms, @study) %>">
        <% if @forms.empty? -%>
          <p>There are no unassigned CRFs left</p>
        <% else -%>
          <%= render :partial => "admin/study_cumulative_crfs/crf_enrolling", :collection => @forms, :as => :form %>
        <% end -%>
      </div>
      <div>
        <%= link_to 'New form', {:controller => "/fd"}, :popup => true, :style => "margin-right:150px" %>
      </div>
      <div>
        <%= f.submit "OK" %> or <%= link_to_cancel "cancel", new_admin_study_crf_path(@study) %>
      </div>

    <% end %>
  </div>
</div>
