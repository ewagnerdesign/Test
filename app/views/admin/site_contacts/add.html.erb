<div class="block-container" style="border-color:LimeGreen;">
  <div class="title">Add existing users to "<%= @site.name %>" Site</div>
  <%= link_to_close(add_admin_site_contacts_path(@site)) %>
  <div id="<%= dom_id(@site, :contact) %>" class="input-form">
  <% if @candidates.empty? %>
    <p>There are no unassigned Users left</p>
  <% else %>
    <% remote_form_for [:admin, @site], :url => enroll_admin_site_contacts_path(@site) do |f| %>
      <p>
        <%= select_tag 'contacts[]', options_for_select(
          @candidates.map {|m| [m.get_info, m.id]}, []),
          :multiple => true, :size => 10 %>
      </p>
      <%= submit_tag "Add", :id => "#{dom_id(@site, :add_contact_submit)}"  %>
    <% end %>
  <% end %>
  </div>
</div>
