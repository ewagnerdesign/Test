<div class="block-container" style="border-color:LimeGreen;">
  <div class="title">Edit <%= h(@domain.name) %> </div>
  <%= link_to_close(edit_admin_domain_path(@domain)) %>
  <div id="<%= dom_id(@domain) %>" class="input-form crud-form">
  <% remote_form_for [:admin, @domain] do |f| %>
    <%= render :partial => "form", :locals => {:f => f} %>
    <p>
      <%= f.submit "Update" %> or <%= link_to_cancel "cancel", edit_admin_domain_path(@domain) %>
    </p>
  <% end %>
  </div>
</div>
