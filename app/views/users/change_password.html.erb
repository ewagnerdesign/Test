<% title @user.first_login? ? 'Set password' : (@user.password_expired? ? 'Change password - old has been expired' : 'Change password') %>

<% form_for @user, :url => update_password_user_path(@user) do |form| %>
  <%= form.error_messages %>

  <% unless @user.first_login? %>
    <%= form.label :current_password %><br />
    <%= form.password_field :current_password %><br />
    <br />
  <% end %>

  <%= form.label :password, @user.first_login? ? nil : "Change password" %><br />
  <%= form.password_field :password %><br />
  <br />
  <%= form.label :password_confirmation %><br />
  <%= form.password_field :password_confirmation %><br />


  <%= form.submit "Submit" %>
<% end %>

<%= link_to "Back", user_path(@user) %>