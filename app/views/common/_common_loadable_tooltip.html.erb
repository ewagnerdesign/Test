<% javascript_tag do -%>
$('#<%= host_id %>').tooltip({
  position: 'bottom right',
  tip: '#<%= tooltip_id %>',
  onBeforeShow: function() {
    $.ajax({success:function(request){jQuery('#<%= tooltip_id %>').html(request);}, type:'get',
          url: '<%= url %>' })
  },
  onHide: function() {
	  $('#<%= tooltip_id %>').empty();
  }
});
<% end %>
