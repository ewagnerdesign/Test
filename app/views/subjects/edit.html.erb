<td colspan="9">
<div class="block-container" style="border-color:LimeGreen;">
  <div class="title">Edit <%= h(@subject.number) %> </div>
  <%= link_to_close(edit_subject_path(@subject)) %>
  <div id="<%= dom_id_nested(:item, @subject) %>" class="input-form crud-form">
  <% remote_form_for @subject, :url => subject_path(@subject) do |f| %>
    <%= render :partial => "form", :locals => {:f => f} %>
    <p>
      <%= f.submit "Update" %> or <%= link_to_cancel "cancel", edit_subject_path(@subject) %>
    </p>
  <% end %>
  </div>
</div>
</td>